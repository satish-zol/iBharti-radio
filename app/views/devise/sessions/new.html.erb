<div style="width: 300px;">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :style => "font-size:  21.5px;" %><br />
  <%= f.email_field :email, :style => "font-size:  18px;" %></div>

  <div><%= f.label :password, :style => "font-size:  21.5px;" %><br />
  <%= f.password_field :password, :style => "font-size:  18px;" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "font-size: 15.5px;" %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :style =>"width: 150px; font-size: 18px;" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>