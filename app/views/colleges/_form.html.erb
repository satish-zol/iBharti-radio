<%= form_for @college, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls">
      <% if @cities.present? %>
        <%= f.collection_select :city_id, @cities, :id, :name, {:include_blank => "Select City"}, :class => 'number_field' %>
      <% else %>
        <input class="text_field", placeholder="No Cities found!", readonly/>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                colleges_path, :class => 'btn' %>
  </div>
<% end %>
